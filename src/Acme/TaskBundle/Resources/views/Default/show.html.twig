{% extends 'base.html.twig' %}
{% block title %} ToDo List {% endblock %}
{% block body %}
        Title: {{ task.task }}<br>
        Due Date: {{ task.dueDate|date('Y-m-d')  }}<br>
        Due Time: {{ task.dueTime|date('H:i:s') }}<br>
        Created Time: {{ task.createdDate|date('Y-m-d H:i:s') }}<br>
        <a href="{{ path("show_by_category", {'category':task.category.id}) }}">Category: {{ task.category }}</a> <br><p>
    <p><a href="{{ path('task_update', {"id":task.id}) }}"><input type="button" value="Change task"> </a></p>
    <a href="{{ path("show_category") }}">Show categories</a><br>
    <a href="{{ path('showAll') }}"> Show created tasks</a><br>
    <a href="{{ path("task_new") }}"> Create next task</a><br>
{% endblock %}